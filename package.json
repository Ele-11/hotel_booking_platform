{
  "name": "hotel-booking-platform",
  "version": "1.0.0",
  "private": true,
  "description": "邓张张---智慧出行酒店预订平台 - Monorepo项目",
  "scripts": {
    "install:all": "pnpm install",
    "install:web": "pnpm --filter web install",
    "install:mobile": "pnpm --filter mobile install",
    "install:server": "pnpm --filter server install",
    "install:shared": "pnpm --filter \"shared-*\" install",
    
    "dev": "pnpm --parallel --filter \"./apps/*\" run dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:server": "pnpm --filter server dev",
    "dev:web+server": "pnpm --filter web --filter server run dev",
    
    "build": "pnpm --filter \"./apps/*\" run build",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile build",
    "build:server": "pnpm --filter server build",
    
    "lint": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" run lint",
    "lint:fix": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" run lint:fix",
    
    "test": "pnpm --filter \"./apps/*\" run test",
    "test:web": "pnpm --filter web test",
    "test:mobile": "pnpm --filter mobile test",
    "test:server": "pnpm --filter server test",
    
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css,scss}\" --ignore-path .gitignore",
    
    "prepare": "husky install",
    "db:migrate": "cd apps/server && npx prisma migrate dev",
    "db:studio": "cd apps/server && npx prisma studio",
    "db:generate": "cd apps/server && npx prisma generate",
    
    "clean": "rm -rf node_modules && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:build": "find . -name 'dist' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' +",
    
    "start": "pnpm --filter server start",
    "start:prod": "pnpm --filter server start:prod",
    
    "type-check": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" run type-check",
    "type-check:web": "pnpm --filter web type-check",
    "type-check:mobile": "pnpm --filter mobile type-check",
    "type-check:server": "pnpm --filter server type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}